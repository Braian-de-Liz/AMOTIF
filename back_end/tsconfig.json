{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "esnext",
    
    "types": ["node"], 

    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}